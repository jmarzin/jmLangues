<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:divider="@drawable/divider"
        android:focusable="false"
        android:orientation="vertical"
        android:showDividers="middle">

    <TextView
            android:id="@+id/t_langue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elegantTextHeight="false"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:text="@string/titre_langue"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/abc_text_size_title_material"
            android:textStyle="bold"
            tools:ignore="PrivateResource"
            tools:targetApi="lollipop" />

    <!--android:paddingTop="@dimen/abc_action_bar_default_padding_material"-->

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:orientation="horizontal">

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@string/Italien"
                android:focusable="true"
                android:onClick="clickDrapeauItalien"
                app:srcCompat="@drawable/italien" />

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@string/Anglais"
                android:focusable="true"
                android:onClick="clickDrapeauAnglais"
                app:srcCompat="@drawable/anglais" />

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@string/Espagnol"
                android:focusable="true"
                android:onClick="clickDrapeauEspagnol"
                app:srcCompat="@drawable/espagnol" />

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@string/Portugais"
                android:focusable="true"
                android:onClick="clickDrapeauPortugais"
                app:srcCompat="@drawable/portugais" />

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@string/Occitan"
                android:focusable="true"
                android:onClick="clickDrapeauOccitan"
                app:srcCompat="@drawable/occitan" />

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@string/Lingvo"
                android:focusable="true"
                android:onClick="clickDrapeauLingvo"
                app:srcCompat="@drawable/lingvo" />

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@string/Allemand"
                android:focusable="true"
                android:onClick="clickDrapeauAllemand"
                app:srcCompat="@drawable/allemand" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider"
            android:dividerPadding="20dp"
            android:focusable="false"
            android:orientation="vertical"
            android:showDividers="middle|end">

        <Button
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:onClick="clickThemes"
                android:paddingStart="@dimen/taille_drap"
                android:paddingEnd="@dimen/taille_drap"
                android:text="@string/themes"
                android:textColor="#fe000000" />

        <Button
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:onClick="clickMots"
                android:paddingStart="@dimen/taille_drap"
                android:paddingEnd="@dimen/taille_drap"
                android:text="@string/mots"
                android:textColor="#fe000000" />

        <Button
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:onClick="clickVerbes"
                android:paddingStart="@dimen/taille_drap"
                android:paddingEnd="@dimen/taille_drap"
                android:text="@string/verbes"
                android:textColor="#fe000000" />

        <Button
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:onClick="clickFormesTypes"
                android:paddingStart="@dimen/taille_drap"
                android:paddingEnd="@dimen/taille_drap"
                android:text="@string/formes_types"
                android:textColor="#fe000000" />

        <Button
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:onClick="clickFormes"
                android:paddingStart="@dimen/taille_drap"
                android:paddingEnd="@dimen/taille_drap"
                android:text="@string/formes"
                android:textColor="#fe000000" />

        <Button
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:onClick="clickRevision"
                android:paddingStart="@dimen/taille_drap"
                android:paddingEnd="@dimen/taille_drap"
                android:text="@string/revision"
                android:textColor="#fe000000"
                android:visibility="visible" />

        <Button
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:onClick="clickStatistiques"
                android:paddingStart="@dimen/taille_drap"
                android:paddingEnd="@dimen/taille_drap"
                android:singleLine="true"
                android:text="@string/statistiques"
                android:textColor="#fe000000" />

        <Button
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:onClick="clickParametrage"
                android:paddingStart="@dimen/taille_drap"
                android:paddingEnd="@dimen/taille_drap"
                android:singleLine="true"
                android:text="@string/parametrage"
                android:textColor="#fe000000" />

        <Button
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:onClick="clickQuitter"
                android:paddingStart="@dimen/taille_drap"
                android:paddingEnd="@dimen/taille_drap"
                android:singleLine="true"
                android:text="@string/quitter"
                android:textColor="#fe000000" />

    </LinearLayout>

</LinearLayout>